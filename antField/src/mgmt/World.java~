package mgmt;

import java.util.ArrayList;

import ants.Ant;

/**
 * @author Erick Aldaz
 * 
 * Worlds, in their simplest form, contain a simple list of Ants, which they 
 * animate based on rules dictated by their parameters.
 *
 */
public class World extends ArrayList<Ant> {
	
	private static final long serialVersionUID = -7021061934135182729L;

	private Ant lottery( ) {
		return this.get( (int)Math.floor( Math.random( ) * this.size( ) ) );
	}
	
	public void tick( ) {
		Ant winner = lottery( );
		
		winner.act( );
	}
	
	public World( ) {
		super( );
	}
}
